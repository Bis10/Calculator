{% extends 'base.html.twig' %}

{% block title %}Calculator
{% endblock %}

{% block body %}
	<style>
		body {
			background-color: skyblue;
		}
		.container {
			margin: 2em auto;
			padding: 2em;
			max-width: 800px;
			width: 95%;
			font-size: 18px;
			font-family: sans-serif;
		}
		.form-group {
			margin-bottom: 1em;
		}
		.error ul {
			color: red;
			list-style-type: none;
			font-size:16px;
		}
		.calculate-btn{
			background-color:green;
			color:white;
			padding: 0.5rem;
			border: none;
			border-radius:10px;

		}

	</style>

	<div class="container">
		<h1>Calculator</h1>
		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.num1) }}
			{{ form_widget(form.num1) }}
			<div class="error">
			<ul>
				{{ form_errors(form.num1) }}
				</ul>
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.num2) }}
			{{ form_widget(form.num2) }}
			<div class="error">
			<ul>
				{{ form_errors(form.num2) }}
				</ul>
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.operation) }}
			{{ form_widget(form.operation) }}
			<div class="error">
			<ul>
				{{ form_errors(form.operation) }}
				</ul>
			</div>
		</div>
<button type="submit"   class="calculate-btn">Calculate</button>

		{{ form_end(form) }}

		{% if result is not null %}
			<h2>Result:</h2>
			<p>First Number is
				{{ num1 }}.</p>
			<p>Second Number is
				{{ num2 }}.</p>
			<p>Operation:
				{{ operation|upper }}.</p>
			<p>Result is
				{{ result }}.</p>
		{% endif %}
	</div>
{% endblock %}
